<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary">
        <ImageView
                android:layout_width="@dimen/pad_60"
                android:layout_height="@dimen/pad_60"
                android:src="@drawable/ic_account_circle_white_48dp"
                android:contentDescription="@string/app_name"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/pad_20"/>

        <in.inferon.msl.lemonor.view.ui.BoldTextView
                android:id="@+id/userNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/white"
                android:gravity="center"/>

        <in.inferon.msl.lemonor.view.ui.LightTextView
                android:id="@+id/mailIDTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_12sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="@dimen/pad_10"
                android:layout_marginBottom="@dimen/pad_20"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundColor">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/pad_20"
                android:animateLayoutChanges="true"
                android:background="@color/backgroundColor">
            <LinearLayout
                    android:id="@+id/consumerTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/pad_10"
                    android:paddingStart="@dimen/pad_10">
                <ImageView
                        android:layout_width="@dimen/pad_30"
                        android:layout_height="@dimen/pad_30"
                        android:src="@drawable/ic_shopping_basket_green_24dp"
                        android:scaleType="centerInside"
                        android:contentDescription="@string/app_name"
                        android:adjustViewBounds="true"/>
                <in.inferon.msl.lemonor.view.ui.BoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/buy"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/main_gray"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/pad_10"
                        android:layout_marginStart="@dimen/pad_10"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/light_gray_2">
                <LinearLayout
                        android:id="@+id/editProfileTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/pad_10"
                        android:paddingLeft="@dimen/pad_10"
                        android:paddingStart="@dimen/pad_10">
                    <ImageView
                            android:layout_width="@dimen/pad_30"
                            android:layout_height="@dimen/pad_30"
                            android:src="@drawable/ic_account_circle_green_24dp"
                            android:scaleType="centerInside"
                            android:contentDescription="@string/app_name"
                            android:adjustViewBounds="true"/>
                    <in.inferon.msl.lemonor.view.ui.LightTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/edit_profile"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/main_gray"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/pad_10"
                            android:layout_marginStart="@dimen/pad_10"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/myOrdersTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/pad_10"
                        android:layout_marginBottom="@dimen/pad_10"
                        android:paddingLeft="@dimen/pad_10"
                        android:paddingStart="@dimen/pad_10">
                    <ImageView
                            android:layout_width="@dimen/pad_30"
                            android:layout_height="@dimen/pad_30"
                            android:src="@drawable/ic_local_mall_green_24dp"
                            android:scaleType="centerInside"
                            android:contentDescription="@string/app_name"
                            android:adjustViewBounds="true"/>
                    <in.inferon.msl.lemonor.view.ui.LightTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/my_orders"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/main_gray"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/pad_10"
                            android:layout_marginStart="@dimen/pad_10"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/supplierTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/pad_10"
                    android:paddingLeft="@dimen/pad_10"
                    android:paddingStart="@dimen/pad_10">
                <ImageView
                        android:layout_width="@dimen/pad_30"
                        android:layout_height="@dimen/pad_30"
                        android:src="@drawable/ic_store_green_24dp"
                        android:scaleType="centerInside"
                        android:contentDescription="@string/app_name"
                        android:adjustViewBounds="true"/>

                <in.inferon.msl.lemonor.view.ui.BoldTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/sell"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/main_gray"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/pad_10"
                        android:layout_marginStart="@dimen/pad_10"
                        android:layout_weight="1"/>

                <ImageView
                        android:id="@+id/expandIV"
                        android:layout_width="@dimen/pad_30"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_keyboard_arrow_down_green_24dp"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/navExpandLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/light_gray_2"
                    android:visibility="gone">

                <LinearLayout
                        android:id="@+id/addProductTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/pad_10"
                        android:paddingLeft="@dimen/pad_10"
                        android:paddingStart="@dimen/pad_10">
                    <ImageView
                            android:layout_width="@dimen/pad_30"
                            android:layout_height="@dimen/pad_30"
                            android:src="@drawable/ic_add_circle_outline_green_24dp"
                            android:scaleType="centerInside"
                            android:contentDescription="@string/app_name"
                            android:adjustViewBounds="true"/>

                    <in.inferon.msl.lemonor.view.ui.LightTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/add_product"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/main_gray"
                            android:textAllCaps="false"
                            android:layout_marginLeft="@dimen/pad_10"
                            android:layout_marginStart="@dimen/pad_10"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/viewProductsTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/pad_10"
                        android:paddingLeft="@dimen/pad_10"
                        android:paddingStart="@dimen/pad_10">
                    <ImageView
                            android:layout_width="@dimen/pad_30"
                            android:layout_height="@dimen/pad_30"
                            android:src="@drawable/ic_pageview_green_24dp"
                            android:scaleType="centerInside"
                            android:contentDescription="@string/app_name"
                            android:adjustViewBounds="true"/>

                    <in.inferon.msl.lemonor.view.ui.LightTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_edit_products"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/main_gray"
                            android:textAllCaps="false"
                            android:layout_marginLeft="@dimen/pad_10"
                            android:layout_marginStart="@dimen/pad_10"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/quickPriceUpdateTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/pad_10"
                        android:paddingLeft="@dimen/pad_10"
                        android:paddingStart="@dimen/pad_10">
                    <ImageView
                            android:layout_width="@dimen/pad_30"
                            android:layout_height="@dimen/pad_30"
                            android:src="@drawable/ic_flash_on_green_24dp"
                            android:scaleType="centerInside"
                            android:contentDescription="@string/app_name"
                            android:adjustViewBounds="true"/>

                    <in.inferon.msl.lemonor.view.ui.LightTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/quick_price_update"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/main_gray"
                            android:textAllCaps="false"
                            android:layout_marginLeft="@dimen/pad_10"
                            android:layout_marginStart="@dimen/pad_10"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/orderHistoryTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/pad_10"
                        android:paddingLeft="@dimen/pad_10"
                        android:paddingStart="@dimen/pad_10">
                    <ImageView
                            android:layout_width="@dimen/pad_30"
                            android:layout_height="@dimen/pad_30"
                            android:src="@drawable/ic_receipt_green_24dp"
                            android:scaleType="centerInside"
                            android:contentDescription="@string/app_name"
                            android:adjustViewBounds="true"/>
                    <in.inferon.msl.lemonor.view.ui.LightTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_history"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/main_gray"
                            android:textAllCaps="false"
                            android:layout_marginLeft="@dimen/pad_10"
                            android:layout_marginStart="@dimen/pad_10"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/editSellerProfileTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/pad_10"
                        android:layout_marginBottom="@dimen/pad_10"
                        android:paddingLeft="@dimen/pad_10"
                        android:paddingStart="@dimen/pad_10">
                    <ImageView
                            android:layout_width="@dimen/pad_30"
                            android:layout_height="@dimen/pad_30"
                            android:src="@drawable/ic_edit_location_green_24dp"
                            android:scaleType="centerInside"
                            android:contentDescription="@string/app_name"
                            android:adjustViewBounds="true"/>

                    <in.inferon.msl.lemonor.view.ui.LightTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/edit_seller_profile_amp_location"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/main_gray"
                            android:textAllCaps="false"
                            android:layout_marginLeft="@dimen/pad_10"
                            android:layout_marginStart="@dimen/pad_10"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                    android:id="@+id/iamDeliveringTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/pad_10"
                    android:paddingLeft="@dimen/pad_10"
                    android:paddingStart="@dimen/pad_10">
                <ImageView
                        android:layout_width="@dimen/pad_30"
                        android:layout_height="@dimen/pad_30"
                        android:src="@drawable/ic_store_green_24dp"
                        android:scaleType="centerInside"
                        android:contentDescription="@string/app_name"
                        android:adjustViewBounds="true"/>
                <in.inferon.msl.lemonor.view.ui.LightTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/i_m_delivering"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/main_gray"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/pad_10"
                        android:layout_marginStart="@dimen/pad_10"/>
            </LinearLayout>

            <View
                    android:layout_width="@dimen/pad_100"
                    android:layout_height="@dimen/pad_1"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/pad_20"
                    android:layout_marginBottom="@dimen/pad_10"/>

            <LinearLayout
                    android:id="@+id/aboutUsTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/pad_10"
                    android:paddingLeft="@dimen/pad_10"
                    android:paddingStart="@dimen/pad_10">
                <ImageView
                        android:layout_width="@dimen/pad_30"
                        android:layout_height="@dimen/pad_30"
                        android:src="@drawable/ic_info_outline_green_24dp"
                        android:scaleType="centerInside"
                        android:contentDescription="@string/app_name"
                        android:adjustViewBounds="true"/>

                <in.inferon.msl.lemonor.view.ui.LightTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/about_us"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/main_gray"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/pad_10"
                        android:layout_marginStart="@dimen/pad_10"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/safetyMeasurementTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/pad_10"
                    android:paddingLeft="@dimen/pad_10"
                    android:paddingStart="@dimen/pad_10">
                <ImageView
                        android:layout_width="@dimen/pad_30"
                        android:layout_height="@dimen/pad_30"
                        android:src="@drawable/ic_security_green_24dp"
                        android:scaleType="centerInside"
                        android:contentDescription="@string/app_name"
                        android:adjustViewBounds="true"/>

                <in.inferon.msl.lemonor.view.ui.LightTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/safety_measures"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/main_gray"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/pad_10"
                        android:layout_marginStart="@dimen/pad_10"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/supportTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/pad_10"
                    android:paddingLeft="@dimen/pad_10"
                    android:paddingStart="@dimen/pad_10">
                <ImageView
                        android:layout_width="@dimen/pad_30"
                        android:layout_height="@dimen/pad_30"
                        android:src="@drawable/ic_thumb_up_green_24dp"
                        android:scaleType="centerInside"
                        android:contentDescription="@string/app_name"
                        android:adjustViewBounds="true"/>
                <in.inferon.msl.lemonor.view.ui.LightTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/help_desk"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/main_gray"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/pad_10"
                        android:layout_marginStart="@dimen/pad_10"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>