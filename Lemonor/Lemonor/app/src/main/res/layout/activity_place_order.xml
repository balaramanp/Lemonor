<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        tools:context=".view.activity.ProductSelectionActivity">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="@dimen/pad_5">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/colorPrimary">
            <ImageButton
                    android:id="@+id/backIB"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="@dimen/pad_50"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_keyboard_arrow_left_white_24dp"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"/>

            <in.inferon.msl.lemonor.view.ui.BoldTextView
                    android:id="@+id/titleTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text_16sp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_weight="1"/>

            <LinearLayout
                    android:id="@+id/textOrderLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="end">
                <in.inferon.msl.lemonor.view.ui.LightTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/text_order"
                        android:textSize="@dimen/text_12sp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"/>

                <ImageView
                        android:layout_width="@dimen/pad_40"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_mode_edit_white_18dp"
                        android:contentDescription="@string/app_name"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/main_edit_tx_bg"
                        android:layout_marginLeft="@dimen/pad_5"
                        android:layout_marginRight="@dimen/pad_5"
                        android:layout_marginTop="@dimen/pad_10">
                    <ImageView
                            android:layout_width="@dimen/pad_40"
                            android:layout_height="@dimen/pad_40"
                            android:src="@drawable/ic_search_black_24dp"
                            android:contentDescription="@string/app_name"
                            android:adjustViewBounds="true"
                            android:padding="@dimen/pad_10"/>

                    <in.inferon.msl.lemonor.view.ui.LightEditText
                            android:id="@+id/searchET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/fontColor"
                            android:inputType="textMultiLine"
                            android:background="@drawable/plain_edit_tx_bg"
                            android:hint="@string/search_product"
                            android:textColorHint="@color/light_gray"
                            android:imeOptions="actionDone"
                            android:padding="@dimen/pad_10"
                            android:layout_weight="1"/>

                    <ImageButton
                            android:id="@+id/closeIB"
                            style="?attr/borderlessButtonStyle"
                            android:layout_width="@dimen/pad_50"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_close_black_18dp"
                            android:contentDescription="@string/app_name"
                            android:adjustViewBounds="true"
                            android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/openOrderLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/main_edit_tx_bg"
                        android:layout_margin="@dimen/pad_5"
                        android:visibility="gone">
                    <ImageView
                            android:id="@+id/editIV"
                            android:layout_width="@dimen/pad_40"
                            android:layout_height="@dimen/pad_40"
                            android:src="@drawable/ic_edit_black_24dp"
                            android:contentDescription="@string/app_name"
                            android:adjustViewBounds="true"
                            android:padding="@dimen/pad_10"/>
                    <in.inferon.msl.lemonor.view.ui.LightEditText
                            android:id="@+id/o2ET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/fontColor"
                            android:inputType="textMultiLine"
                            android:background="@drawable/plain_edit_tx_bg"
                            android:hint="@string/you_can_freely_type_your_order_here"
                            android:textColorHint="@color/light_gray"
                            android:imeOptions="actionDone"
                            android:padding="@dimen/pad_10"/>
                </LinearLayout>

                <in.inferon.msl.lemonor.view.ui.BoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/category"
                        android:textSize="@dimen/text_16sp"
                        android:textColor="@color/black"
                        android:padding="@dimen/pad_10"/>

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/categoriesRV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                <in.inferon.msl.lemonor.view.ui.LightTextView
                        android:id="@+id/categoryViewMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_all_category"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/main_cancel_bt_color"
                        android:background="@drawable/main_cancel_bt_bg"
                        android:paddingTop="@dimen/pad_5"
                        android:paddingBottom="@dimen/pad_5"
                        android:paddingLeft="@dimen/pad_20"
                        android:paddingRight="@dimen/pad_20"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/pad_10"
                        android:layout_marginBottom="@dimen/pad_10"/>

                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                <in.inferon.msl.lemonor.view.ui.LightTextView
                        android:id="@+id/moreItemTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/view_all_products"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/main_cancel_bt_color"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/pad_10"
                        android:layout_marginBottom="@dimen/pad_10"
                        android:layout_marginStart="@dimen/pad_5"
                        android:layout_marginEnd="@dimen/pad_5"
                        android:paddingTop="@dimen/pad_5"
                        android:paddingBottom="@dimen/pad_5"
                        android:paddingLeft="@dimen/pad_20"
                        android:paddingRight="@dimen/pad_20"
                        android:background="@drawable/main_cancel_bt_bg"
                        android:visibility="visible"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
                android:id="@+id/progressLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="@dimen/pad_20"
                    android:paddingRight="@dimen/pad_20"
                    android:paddingTop="@dimen/pad_10"
                    android:paddingBottom="@dimen/pad_10"
                    android:background="@drawable/progress_layout_bg"
                    android:layout_centerInParent="true">
                <in.inferon.msl.lemonor.view.ui.LightTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textSize="@dimen/text_12sp"
                        android:textColor="@color/colorPrimary"/>

                <ProgressBar
                        android:layout_width="@dimen/pad_15"
                        android:layout_height="@dimen/pad_15"
                        android:indeterminateTint="@color/colorPrimary"
                        android:indeterminateTintMode="src_in"
                        android:layout_marginLeft="@dimen/pad_10"
                        android:layout_marginStart="@dimen/pad_10"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/pad_5">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                <in.inferon.msl.lemonor.view.ui.LightTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total"
                        android:textSize="@dimen/text_16sp"
                        android:textColor="@color/white"/>

                <in.inferon.msl.lemonor.view.ui.LightTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="@dimen/text_16sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/pad_10"
                        android:layout_marginStart="@dimen/pad_10"/>

                <in.inferon.msl.lemonor.view.ui.BoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Rs_string"
                        android:textSize="@dimen/text_16sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/pad_10"
                        android:layout_marginStart="@dimen/pad_10"/>
                <in.inferon.msl.lemonor.view.ui.BoldTextView
                        android:id="@+id/totalPriceTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_0"
                        android:textSize="@dimen/text_16sp"
                        android:transitionName="totalPrice"
                        android:textColor="@color/white"
                        android:layout_marginRight="@dimen/pad_10"
                        android:layout_marginEnd="@dimen/pad_10"/>
            </LinearLayout>

            <View
                    android:layout_width="@dimen/pad_1"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/pad_10"
                    android:layout_marginBottom="@dimen/pad_10"/>

            <in.inferon.msl.lemonor.view.ui.BoldButton
                    android:id="@+id/orderBT"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/place_order"
                    android:textSize="@dimen/text_16sp"
                    android:textColor="@color/white"
                    android:background="@drawable/place_order_bt_bg"
                    android:layout_weight="1"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>