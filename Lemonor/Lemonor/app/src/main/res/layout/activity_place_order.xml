<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        tools:context=".view.activity.ProductSelectionActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">
        <ImageButton
                android:id="@+id/backIB"
                style="?attr/borderlessButtonStyle"
                android:layout_width="@dimen/pad_50"
                android:layout_height="match_parent"
                android:src="@drawable/ic_keyboard_arrow_left_white_24dp"
                android:contentDescription="@string/app_name"
                android:adjustViewBounds="true"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <LinearLayout
                    android:id="@+id/titleLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <in.inferon.msl.lemonor.view.ui.BoldTextView
                        android:id="@+id/titleTV"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_16sp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:transitionName="shopName"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_weight="1"/>

                <in.inferon.msl.lemonor.view.ui.BoldTextView
                        android:id="@+id/categoryNameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_16sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:drawableLeft="@drawable/baseline_list_alt_white_24dp"
                        android:drawableStart="@drawable/baseline_list_alt_white_24dp"
                        android:drawablePadding="@dimen/pad_5"
                        android:layout_marginRight="@dimen/pad_15"
                        android:layout_marginEnd="@dimen/pad_15"
                        android:visibility="gone"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/pad_10">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/main_edit_tx_bg"
                    android:layout_margin="@dimen/pad_5">
                <ImageView
                        android:layout_width="@dimen/pad_40"
                        android:layout_height="@dimen/pad_40"
                        android:src="@drawable/ic_search_black_24dp"
                        android:contentDescription="@string/app_name"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/pad_10"/>

                <in.inferon.msl.lemonor.view.ui.LightEditText
                        android:id="@+id/searchET"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/fontColor"
                        android:hint="@string/search_product"
                        android:textColorHint="@color/light_gray"
                        android:background="@drawable/plain_edit_tx_bg"
                        android:imeOptions="actionDone"
                        android:padding="@dimen/pad_10"
                        android:layout_weight="1"/>

                <ImageButton
                        android:id="@+id/closeIB"
                        style="?attr/borderlessButtonStyle"
                        android:layout_width="@dimen/pad_50"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_close_black_24dp"
                        android:contentDescription="@string/app_name"
                        android:adjustViewBounds="true"
                        android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/pad_5">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/main_edit_tx_bg">
                    <ImageView
                            android:id="@+id/editIV"
                            android:layout_width="@dimen/pad_40"
                            android:layout_height="@dimen/pad_40"
                            android:src="@drawable/ic_edit_black_24dp"
                            android:contentDescription="@string/app_name"
                            android:adjustViewBounds="true"
                            android:padding="@dimen/pad_10"/>
                    <in.inferon.msl.lemonor.view.ui.LightEditText
                            android:id="@+id/o2ET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/fontColor"
                            android:inputType="textMultiLine"
                            android:background="@drawable/plain_edit_tx_bg"
                            android:hint="@string/you_can_freely_type_your_order_here"
                            android:textColorHint="@color/light_gray"
                            android:imeOptions="actionDone"
                            android:padding="@dimen/pad_10"/>
                </LinearLayout>

                <ImageButton
                        android:id="@+id/imageIB"
                        style="?attr/borderlessButtonStyle"
                        android:layout_width="@dimen/pad_50"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_photo_camera_green_24dp"
                        android:contentDescription="@string/app_name"
                        android:adjustViewBounds="true"
                        android:visibility="gone"/>
            </LinearLayout>

            <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pad_100"
                    android:contentDescription="@string/app_name"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <RelativeLayout
                android:id="@+id/progressLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="@dimen/pad_20"
                    android:paddingRight="@dimen/pad_20"
                    android:paddingTop="@dimen/pad_10"
                    android:paddingBottom="@dimen/pad_10"
                    android:background="@drawable/progress_layout_bg"
                    android:layout_centerInParent="true">
                <in.inferon.msl.lemonor.view.ui.LightTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textSize="@dimen/text_12sp"
                        android:textColor="@color/colorPrimary"/>

                <ProgressBar
                        android:layout_width="@dimen/pad_15"
                        android:layout_height="@dimen/pad_15"
                        android:indeterminateTint="@color/colorPrimary"
                        android:indeterminateTintMode="src_in"
                        android:layout_marginLeft="@dimen/pad_10"
                        android:layout_marginStart="@dimen/pad_10"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1">

            <in.inferon.msl.lemonor.view.ui.LightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total"
                    android:textSize="@dimen/text_16sp"
                    android:textColor="@color/white"/>

            <in.inferon.msl.lemonor.view.ui.LightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="@dimen/text_16sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/pad_10"
                    android:layout_marginStart="@dimen/pad_10"/>

            <in.inferon.msl.lemonor.view.ui.BoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Rs_string"
                    android:textSize="@dimen/text_16sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/pad_10"
                    android:layout_marginStart="@dimen/pad_10"/>
            <in.inferon.msl.lemonor.view.ui.BoldTextView
                    android:id="@+id/totalPriceTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_0"
                    android:textSize="@dimen/text_16sp"
                    android:transitionName="totalPrice"
                    android:textColor="@color/white"
                    android:layout_marginRight="@dimen/pad_10"
                    android:layout_marginEnd="@dimen/pad_10"/>
        </LinearLayout>

        <View
                android:layout_width="@dimen/pad_1"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="@dimen/pad_10"
                android:layout_marginBottom="@dimen/pad_10"/>

        <in.inferon.msl.lemonor.view.ui.BoldButton
                android:id="@+id/orderBT"
                style="?attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/place_order"
                android:textSize="@dimen/text_16sp"
                android:textColor="@color/white"
                android:background="@drawable/done_bt_bg"
                android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>