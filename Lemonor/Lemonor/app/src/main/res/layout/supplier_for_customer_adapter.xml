<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <RelativeLayout
            android:id="@+id/imageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
        <in.inferon.msl.lemonor.view.ui.HeightViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <LinearLayout
            android:id="@+id/positionOneLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
                android:id="@+id/preferredSupplierLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
            <in.inferon.msl.lemonor.view.ui.LightTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/featured"
                    android:textSize="@dimen/text_18sp"
                    android:textColor="@color/buttonColor"
                    android:padding="@dimen/pad_10"
                    android:layout_marginTop="@dimen/pad_10"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/preferredSupplierRV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <in.inferon.msl.lemonor.view.ui.LightTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/near_by_shop"
                android:textSize="@dimen/text_18sp"
                android:textColor="@color/buttonColor"
                android:padding="@dimen/pad_10"
                android:layout_marginTop="@dimen/pad_10"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/pad_5"
            android:layout_margin="@dimen/pad_5">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <ImageView
                        android:id="@+id/shopLogoIV"
                        android:layout_width="@dimen/pad_80"
                        android:layout_height="match_parent"
                        android:src="@drawable/shop_icon"
                        android:contentDescription="@string/app_name"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/pad_20"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:padding="@dimen/pad_10">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <in.inferon.msl.lemonor.view.ui.BoldTextView
                                android:id="@+id/shopNameTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_18sp"
                                android:textColor="@color/fontColor"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:layout_weight="1"/>

                        <LinearLayout
                                android:id="@+id/ratingLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="@drawable/supplier_rating_bg"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:paddingLeft="@dimen/pad_5"
                                android:paddingRight="@dimen/pad_5"
                                android:visibility="invisible">
                            <ImageView
                                    android:layout_width="@dimen/pad_10"
                                    android:layout_height="@dimen/pad_10"
                                    android:src="@drawable/ic_grade_white_18dp"
                                    android:contentDescription="@string/app_name"
                                    android:adjustViewBounds="true"/>
                            <in.inferon.msl.lemonor.view.ui.LightTextView
                                    android:id="@+id/ratingTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_12sp"
                                    android:textColor="@color/fontColor"
                                    android:layout_marginLeft="@dimen/pad_5"
                                    android:layout_marginStart="@dimen/pad_5"/>
                        </LinearLayout>
                    </LinearLayout>

                    <in.inferon.msl.lemonor.view.ui.LightTextView
                            android:id="@+id/shopDescriptionTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/fontColor"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginTop="@dimen/pad_10"
                            android:visibility="gone"/>

                    <in.inferon.msl.lemonor.view.ui.LightTextView
                            android:id="@+id/addressTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/gray"
                            android:layout_marginTop="@dimen/pad_10"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/pad_10">
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1">
                            <in.inferon.msl.lemonor.view.ui.LightTextView
                                    android:id="@+id/districtTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_14sp"
                                    android:textColor="@color/gray"/>
                            <in.inferon.msl.lemonor.view.ui.LightTextView
                                    android:id="@+id/stateTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_14sp"
                                    android:textColor="@color/gray"
                                    android:layout_marginLeft="@dimen/pad_5"
                                    android:layout_marginStart="@dimen/pad_5"/>
                        </LinearLayout>

                        <LinearLayout
                                android:id="@+id/distanceLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="end">
                            <in.inferon.msl.lemonor.view.ui.LightTextView
                                    android:id="@+id/distanceTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_12sp"
                                    android:textColor="@color/fontColor"
                                    android:drawableLeft="@drawable/ic_near_me_green_18dp"
                                    android:drawableStart="@drawable/ic_near_me_green_18dp"
                                    android:drawablePadding="@dimen/pad_5"/>

                            <in.inferon.msl.lemonor.view.ui.LightTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/kms"
                                    android:textSize="@dimen/text_12sp"
                                    android:textColor="@color/gray"
                                    android:layout_marginLeft="@dimen/pad_5"
                                    android:layout_marginStart="@dimen/pad_5"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/overRatingLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/supplier_rating_bg"
                    android:layout_marginTop="@dimen/pad_15"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:paddingLeft="@dimen/pad_10"
                    android:paddingRight="@dimen/pad_10">
                <ImageView
                        android:layout_width="@dimen/pad_10"
                        android:layout_height="@dimen/pad_10"
                        android:src="@drawable/ic_grade_white_18dp"
                        android:contentDescription="@string/app_name"
                        android:adjustViewBounds="true"/>
                <in.inferon.msl.lemonor.view.ui.LightTextView
                        android:id="@+id/overRatingTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_12sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/pad_5"
                        android:layout_marginStart="@dimen/pad_5"/>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>