<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.activity.OrderConfirmationActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">
        <ImageButton
                android:id="@+id/backIB"
                style="?attr/borderlessButtonStyle"
                android:layout_width="@dimen/pad_50"
                android:layout_height="match_parent"
                android:src="@drawable/ic_keyboard_arrow_left_white_24dp"
                android:contentDescription="@string/app_name"
                android:adjustViewBounds="true"/>

        <in.inferon.msl.lemonor.view.ui.BoldTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/order_summary"
                android:textSize="@dimen/text_16sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"/>
    </LinearLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <ImageView
                        android:layout_width="@dimen/pad_80"
                        android:layout_height="@dimen/pad_80"
                        android:src="@drawable/ic_done_white_36dp"
                        android:contentDescription="@string/app_name"
                        android:adjustViewBounds="true"
                        android:background="@drawable/done_img_bg"
                        android:scaleType="centerInside"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/pad_30"/>

                <in.inferon.msl.lemonor.view.ui.BoldTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/order_placed_successfully"
                        android:textSize="@dimen/text_22sp"
                        android:textColor="@color/buttonColor"
                        android:layout_marginTop="@dimen/pad_20"
                        android:gravity="center"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/pad_10">
                    <in.inferon.msl.lemonor.view.ui.BoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/addresses"
                            android:textSize="@dimen/text_22sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/pad_20"/>

                    <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/pad_10"
                            android:layout_marginTop="@dimen/pad_20">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/pad_10">
                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                <in.inferon.msl.lemonor.view.ui.BoldTextView
                                        android:id="@+id/firstNameTV"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_14sp"
                                        android:textColor="@color/black"
                                        android:layout_weight="1"
                                        android:layout_marginRight="@dimen/pad_5"
                                        android:layout_marginEnd="@dimen/pad_5"/>

                                <in.inferon.msl.lemonor.view.ui.BoldTextView
                                        android:id="@+id/lastNameTV"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_14sp"
                                        android:textColor="@color/black"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="@dimen/pad_5"
                                        android:layout_marginStart="@dimen/pad_5"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="@dimen/pad_10">
                                <in.inferon.msl.lemonor.view.ui.LightTextView
                                        android:id="@+id/phone1TV"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_14sp"
                                        android:textColor="@color/black"
                                        android:layout_weight="1"
                                        android:drawableLeft="@drawable/ic_call_black_18dp"
                                        android:drawableStart="@drawable/ic_call_black_18dp"
                                        android:drawablePadding="@dimen/pad_5"
                                        android:layout_marginRight="@dimen/pad_5"
                                        android:layout_marginEnd="@dimen/pad_5"/>

                                <in.inferon.msl.lemonor.view.ui.LightTextView
                                        android:id="@+id/phone2TV"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_14sp"
                                        android:textColor="@color/black"
                                        android:layout_weight="1"
                                        android:drawableLeft="@drawable/ic_call_black_18dp"
                                        android:drawableStart="@drawable/ic_call_black_18dp"
                                        android:drawablePadding="@dimen/pad_5"
                                        android:layout_marginLeft="@dimen/pad_5"
                                        android:layout_marginStart="@dimen/pad_5"/>
                            </LinearLayout>

                            <in.inferon.msl.lemonor.view.ui.LightTextView
                                    android:id="@+id/address1TV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_14sp"
                                    android:textColor="@color/black"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:layout_marginTop="@dimen/pad_10"/>

                            <in.inferon.msl.lemonor.view.ui.LightTextView
                                    android:id="@+id/address2TV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_14sp"
                                    android:textColor="@color/black"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:layout_marginTop="@dimen/pad_10"/>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="@dimen/pad_10">
                                <in.inferon.msl.lemonor.view.ui.LightTextView
                                        android:id="@+id/landmarkTV"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_14sp"
                                        android:textColor="@color/black"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_weight="1"
                                        android:layout_marginRight="@dimen/pad_5"
                                        android:layout_marginEnd="@dimen/pad_5"/>

                                <in.inferon.msl.lemonor.view.ui.LightTextView
                                        android:id="@+id/pincodeTV"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_14sp"
                                        android:textColor="@color/black"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="@dimen/pad_5"
                                        android:layout_marginStart="@dimen/pad_5"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="@dimen/pad_10">
                                <in.inferon.msl.lemonor.view.ui.LightTextView
                                        android:id="@+id/cityTV"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_14sp"
                                        android:textColor="@color/black"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_weight="1"
                                        android:layout_marginRight="@dimen/pad_5"
                                        android:layout_marginEnd="@dimen/pad_5"/>

                                <in.inferon.msl.lemonor.view.ui.LightTextView
                                        android:id="@+id/districtTV"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_14sp"
                                        android:textColor="@color/black"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="@dimen/pad_5"
                                        android:layout_marginStart="@dimen/pad_5"/>
                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="@dimen/pad_10">
                                <in.inferon.msl.lemonor.view.ui.LightTextView
                                        android:id="@+id/stateTV"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_14sp"
                                        android:textColor="@color/black"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_weight="1"
                                        android:layout_marginRight="@dimen/pad_5"
                                        android:layout_marginEnd="@dimen/pad_5"/>

                                <in.inferon.msl.lemonor.view.ui.LightTextView
                                        android:id="@+id/countryTV"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_14sp"
                                        android:textColor="@color/black"
                                        android:maxLines="1"
                                        android:ellipsize="end"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="@dimen/pad_5"
                                        android:layout_marginStart="@dimen/pad_5"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <in.inferon.msl.lemonor.view.ui.BoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/order_details"
                            android:textSize="@dimen/text_22sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/pad_30"/>

                    <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/pad_10"
                            android:layout_marginTop="@dimen/pad_20"
                            android:layout_marginBottom="@dimen/pad_20">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/pad_10">
                            <in.inferon.msl.lemonor.view.ui.BoldTextView
                                    android:id="@+id/titleTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_16sp"
                                    android:textColor="@color/fontColor"
                                    android:transitionName="shopName"
                                    android:drawableLeft="@drawable/ic_store_green_24dp"
                                    android:drawableStart="@drawable/ic_store_green_24dp"
                                    android:drawablePadding="@dimen/pad_10"/>

                            <in.inferon.msl.lemonor.view.ui.LightTextView
                                    android:id="@+id/o2DescriptionTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_14sp"
                                    android:textColor="@color/fontColor"
                                    android:layout_marginTop="@dimen/pad_10"
                                    android:padding="@dimen/pad_5"/>

                            <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyclerView"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/pad_5">
                                <in.inferon.msl.lemonor.view.ui.LightTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/total"
                                        android:textSize="@dimen/text_14sp"
                                        android:textColor="@color/fontColor"
                                        android:layout_weight="1"/>
                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center"
                                        android:layout_weight="1">
                                    <in.inferon.msl.lemonor.view.ui.BoldTextView
                                            android:id="@+id/itemCountTV"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="@dimen/text_14sp"
                                            android:textColor="@color/black"/>
                                    <in.inferon.msl.lemonor.view.ui.LightTextView
                                            android:id="@+id/itemTV"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/items"
                                            android:textSize="@dimen/text_14sp"
                                            android:textColor="@color/black"
                                            android:layout_marginLeft="@dimen/pad_5"
                                            android:layout_marginStart="@dimen/pad_5"/>
                                </LinearLayout>
                                <in.inferon.msl.lemonor.view.ui.BoldTextView
                                        android:id="@+id/totalTV"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_14sp"
                                        android:textColor="@color/fontColor"
                                        android:transitionName="totalPrice"
                                        android:gravity="end"
                                        android:layout_weight="1"/>
                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <in.inferon.msl.lemonor.view.ui.LightButton
                        android:id="@+id/okBT"
                        style="?attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/pad_40"
                        android:text="@string/ok"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/white"
                        android:background="@drawable/button_bg"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/pad_30"
                        android:layout_marginBottom="@dimen/pad_30"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
                android:id="@+id/progressLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingLeft="@dimen/pad_20"
                android:paddingRight="@dimen/pad_20"
                android:paddingTop="@dimen/pad_10"
                android:paddingBottom="@dimen/pad_10"
                android:background="@drawable/progress_layout_bg"
                android:layout_centerInParent="true"
                android:visibility="gone">
            <in.inferon.msl.lemonor.view.ui.LightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loading"
                    android:textSize="@dimen/text_12sp"
                    android:textColor="@color/colorPrimary"/>

            <ProgressBar
                    android:layout_width="@dimen/pad_15"
                    android:layout_height="@dimen/pad_15"
                    android:indeterminateTint="@color/colorPrimary"
                    android:indeterminateTintMode="src_in"
                    android:layout_marginLeft="@dimen/pad_10"
                    android:layout_marginStart="@dimen/pad_10"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>