<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.activity.LoginActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:background="@color/colorPrimary">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_weight="1.4">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">
                <ImageView
                        android:layout_width="@dimen/pad_60"
                        android:layout_height="@dimen/pad_60"
                        android:src="@drawable/logoplain"
                        android:contentDescription="@string/app_name"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"/>

                <in.inferon.msl.lemonor.view.ui.BoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lemonor"
                        android:textSize="@dimen/text_42sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"/>

                <in.inferon.msl.lemonor.view.ui.LightTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/safe_home_delivery"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/white"
                        android:layout_gravity="end"
                        android:layout_marginRight="@dimen/pad_5"
                        android:layout_marginEnd="@dimen/pad_5"/>

            </LinearLayout>

            <in.inferon.msl.lemonor.view.ui.BoldTextView
                    android:id="@+id/emailTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_16sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/pad_10"
                    android:visibility="gone"/>

            <LinearLayout
                    android:id="@+id/loadingLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/pad_10"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:visibility="gone">
                <ProgressBar
                        android:layout_width="@dimen/pad_10"
                        android:layout_height="@dimen/pad_10"
                        android:indeterminateTint="@color/white"
                        android:indeterminateTintMode="src_in"/>

                <in.inferon.msl.lemonor.view.ui.LightTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textSize="@dimen/text_12sp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/pad_5"
                        android:layout_marginStart="@dimen/pad_5"/>
            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <LinearLayout
                    android:id="@+id/loginLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/google_login_bt_bg"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/pad_40"
                    android:paddingTop="@dimen/pad_5"
                    android:paddingBottom="@dimen/pad_5"
                    android:paddingLeft="@dimen/pad_20"
                    android:paddingRight="@dimen/pad_20"
                    android:visibility="gone">
                <ImageView
                        android:layout_width="@dimen/pad_30"
                        android:layout_height="@dimen/pad_30"
                        android:src="@drawable/google_logo"
                        android:contentDescription="@string/app_name"
                        android:adjustViewBounds="true"/>

                <in.inferon.msl.lemonor.view.ui.LightTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sign_in_with_google"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/black"
                        android:textAllCaps="false"
                        android:layout_marginLeft="@dimen/pad_10"
                        android:layout_marginStart="@dimen/pad_10"/>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/registerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/register_layout_bg"
                    android:layout_marginTop="@dimen/pad_20"
                    android:visibility="gone">
                <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/pad_20"
                            android:paddingLeft="@dimen/pad_20"
                            android:paddingRight="@dimen/pad_20">

                        <in.inferon.msl.lemonor.view.ui.LightEditText
                                android:id="@+id/userNameET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_14sp"
                                android:textColor="@color/fontColor"
                                android:hint="@string/user_name"
                                android:textColorHint="@color/light_gray"
                                android:background="@drawable/main_edit_tx_bg"
                                android:padding="@dimen/pad_15"
                                android:inputType="text"
                                android:layout_marginTop="@dimen/pad_10"
                                android:imeOptions="actionNext"/>

                        <in.inferon.msl.lemonor.view.ui.LightTextView
                                android:id="@+id/userNameTakenTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/username_taken"
                                android:textSize="@dimen/text_12sp"
                                android:textColor="@color/white"
                                android:background="@drawable/username_taken_tv_bg"
                                android:padding="@dimen/pad_5"
                                android:layout_marginLeft="@dimen/pad_10"
                                android:layout_marginRight="@dimen/pad_10"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/pad_20"
                                android:visibility="gone"/>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/pad_10">
                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:background="@drawable/main_edit_tx_bg"
                                    android:layout_marginRight="@dimen/pad_5"
                                    android:layout_marginEnd="@dimen/pad_5"
                                    android:paddingLeft="@dimen/pad_15"
                                    android:paddingRight="@dimen/pad_15"
                                    android:layout_weight="1">
                                <ImageView
                                        android:layout_width="@dimen/pad_15"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/ic_call_black_18dp"
                                        android:contentDescription="@string/app_name"
                                        android:adjustViewBounds="true"/>

                                <in.inferon.msl.lemonor.view.ui.LightTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="@string/_91"
                                        android:textSize="@dimen/text_14sp"
                                        android:textColor="@color/fontColor"
                                        android:gravity="center_vertical"
                                        android:paddingLeft="@dimen/pad_3"
                                        android:paddingRight="@dimen/pad_5"/>

                                <in.inferon.msl.lemonor.view.ui.LightEditText
                                        android:id="@+id/mobileNoET"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/text_14sp"
                                        android:textColor="@color/fontColor"
                                        android:hint="@string/mobile_no"
                                        android:inputType="number"
                                        android:maxLength="10"
                                        android:imeOptions="actionNext"
                                        android:textColorHint="@color/light_gray"
                                        android:background="@drawable/plain_edit_tx_bg"
                                        android:paddingTop="@dimen/pad_15"
                                        android:paddingBottom="@dimen/pad_15"/>
                            </LinearLayout>


                            <in.inferon.msl.lemonor.view.ui.LightTextView
                                    android:id="@+id/countryTV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_14sp"
                                    android:textColor="@color/fontColor"
                                    android:background="@drawable/main_edit_tx_bg"
                                    android:padding="@dimen/pad_15"
                                    android:layout_marginLeft="@dimen/pad_5"
                                    android:layout_marginStart="@dimen/pad_5"
                                    android:layout_weight="1"/>

                            <androidx.appcompat.widget.AppCompatSpinner
                                    android:id="@+id/countrySpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_14sp"
                                    android:textColor="@color/black"
                                    android:background="@drawable/main_edit_tx_bg"
                                    android:layout_marginLeft="@dimen/pad_5"
                                    android:layout_marginStart="@dimen/pad_5"
                                    android:layout_weight="1"
                                    android:padding="@dimen/pad_8"
                                    android:visibility="gone"/>
                        </LinearLayout>

                        <LinearLayout
                                android:id="@+id/stateLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/pad_10"
                                android:visibility="gone">
                            <androidx.appcompat.widget.AppCompatSpinner
                                    android:id="@+id/stateSpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_14sp"
                                    android:textColor="@color/fontColor"
                                    android:background="@drawable/main_edit_tx_bg"
                                    android:layout_marginRight="@dimen/pad_5"
                                    android:layout_marginEnd="@dimen/pad_5"
                                    android:layout_weight="1"
                                    android:padding="@dimen/pad_8"/>

                            <androidx.appcompat.widget.AppCompatSpinner
                                    android:id="@+id/districtSpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_14sp"
                                    android:textColor="@color/fontColor"
                                    android:background="@drawable/main_edit_tx_bg"
                                    android:layout_marginLeft="@dimen/pad_5"
                                    android:layout_marginStart="@dimen/pad_5"
                                    android:layout_weight="1"
                                    android:padding="@dimen/pad_8"/>
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/pad_20"
                                android:orientation="horizontal"
                                android:visibility="gone">
                            <ImageView
                                    android:id="@+id/maleIV"
                                    android:layout_width="@dimen/pad_60"
                                    android:layout_height="@dimen/pad_50"
                                    android:src="@drawable/malon"
                                    android:contentDescription="@string/app_name"
                                    android:adjustViewBounds="true"/>
                            <com.shawnlin.numberpicker.NumberPicker
                                    android:id="@+id/number_picker"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    app:np_width="@dimen/pad_180"
                                    app:np_height="@dimen/pad_50"
                                    app:np_dividerColor="@color/colorPrimary"
                                    app:np_max="120"
                                    app:np_min="0"
                                    app:np_selectedTextColor="@color/fontColor"
                                    app:np_selectedTextSize="@dimen/text_16sp"
                                    app:np_textColor="@color/fontColor"
                                    app:np_textSize="@dimen/text_14sp"
                                    app:np_value="45"
                                    app:np_orientation="horizontal"
                                    android:layout_weight="1"/>
                            <ImageView
                                    android:id="@+id/femaleIV"
                                    android:layout_width="@dimen/pad_60"
                                    android:layout_height="@dimen/pad_50"
                                    android:src="@drawable/fimof"
                                    android:contentDescription="@string/app_name"
                                    android:adjustViewBounds="true"/>
                        </LinearLayout>

                        <in.inferon.msl.lemonor.view.ui.BoldButton
                                android:id="@+id/doneBT"
                                style="?attr/borderlessButtonStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/done"
                                android:textSize="@dimen/text_14sp"
                                android:textColor="@color/white"
                                android:textAllCaps="false"
                                android:paddingLeft="@dimen/pad_40"
                                android:paddingRight="@dimen/pad_40"
                                android:background="@drawable/button_bg"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/pad_30"/>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/pad_200"/>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


    <RelativeLayout
            android:id="@+id/splashLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
        <ImageView
                android:id="@+id/splashIV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/splash_sreen"
                android:contentDescription="@string/app_name"
                android:adjustViewBounds="true"/>

        <LinearLayout
                android:id="@+id/splashLoadingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/pad_200"
                android:gravity="center">
            <ProgressBar
                    android:layout_width="@dimen/pad_10"
                    android:layout_height="@dimen/pad_10"
                    android:indeterminateTint="@color/white"
                    android:indeterminateTintMode="src_in"/>

            <in.inferon.msl.lemonor.view.ui.LightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loading"
                    android:textSize="@dimen/text_12sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/pad_5"
                    android:layout_marginStart="@dimen/pad_5"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>