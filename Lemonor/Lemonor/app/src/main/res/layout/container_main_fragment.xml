<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".view.activity.MainFragmentActivity">

    <fragment
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.activity.ShopMarkerMapActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/backgroundColor">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">
            <LinearLayout
                    android:id="@+id/menuLayout"
                    android:layout_width="@dimen/pad_40"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:background="@drawable/menu_bg"
                    android:padding="@dimen/pad_10">
                <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/pad_1"
                        android:background="@color/white"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/pad_1"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/pad_5"
                        android:layout_marginRight="@dimen/pad_10"
                        android:layout_marginEnd="@dimen/pad_10"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/pad_1"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/pad_5"
                        android:layout_marginRight="@dimen/pad_5"
                        android:layout_marginEnd="@dimen/pad_5"/>
            </LinearLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:id="@+id/supplierToolbarLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:visibility="gone">
                    <in.inferon.msl.lemonor.view.ui.BoldTextView
                            android:id="@+id/shopNameTV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/seller_dashboard"
                            android:textSize="@dimen/text_16sp"
                            android:textColor="@color/white"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:layout_weight="1"/>

                    <ImageButton
                            android:id="@+id/shareIB"
                            style="?attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_share_white_24dp"
                            android:contentDescription="@string/app_name"
                            android:adjustViewBounds="true"
                            android:layout_gravity="center_vertical"
                            android:visibility="invisible"/>

                    <RelativeLayout
                            android:id="@+id/switchLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true">
                        <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/supplierSwitch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:thumbTint="@color/switchColor"
                                app:trackTint="@color/toggleColor"
                                android:layout_marginRight="@dimen/pad_10"
                                android:layout_marginEnd="@dimen/pad_10"
                                android:clickable="false"
                                android:focusableInTouchMode="false"/>
                    </RelativeLayout>

                    <RelativeLayout
                            android:id="@+id/supplierMenuLayout"
                            android:layout_width="@dimen/pad_30"
                            android:layout_height="match_parent"
                            android:visibility="invisible">
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_centerInParent="true">
                            <View
                                    android:layout_width="@dimen/pad_3"
                                    android:layout_height="@dimen/pad_3"
                                    android:background="@drawable/dot_view_bg"/>

                            <View
                                    android:layout_width="@dimen/pad_3"
                                    android:layout_height="@dimen/pad_3"
                                    android:background="@drawable/dot_view_bg"
                                    android:layout_marginTop="@dimen/pad_3"
                                    android:layout_marginBottom="@dimen/pad_3"/>

                            <View
                                    android:layout_width="@dimen/pad_3"
                                    android:layout_height="@dimen/pad_3"
                                    android:background="@drawable/dot_view_bg"/>
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/consumerToolbarLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible">
                    <in.inferon.msl.lemonor.view.ui.BoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/lemonor"
                            android:textSize="@dimen/text_20sp"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_weight="1"/>

                    <in.inferon.msl.lemonor.view.ui.BoldTextView
                            android:id="@+id/shopsToggleTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/all"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/fontColor"
                            android:drawableLeft="@drawable/ic_store_green_24dp"
                            android:drawableStart="@drawable/ic_store_green_24dp"
                            android:drawablePadding="@dimen/pad_5"
                            android:background="@drawable/shops_toggle_tv_bg"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/pad_10"
                            android:paddingRight="@dimen/pad_15"
                            android:paddingTop="@dimen/pad_5"
                            android:paddingBottom="@dimen/pad_5"
                            android:visibility="gone"/>

                    <ImageView
                            android:id="@+id/locationChangeIV"
                            android:layout_width="@dimen/pad_20"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_gps_fixed_white_24dp"
                            android:contentDescription="@string/app_name"
                            android:adjustViewBounds="true"/>

                    <RelativeLayout
                            android:id="@+id/clientMenuLayout"
                            android:layout_width="@dimen/pad_40"
                            android:layout_height="match_parent">
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_centerInParent="true">
                            <View
                                    android:layout_width="@dimen/pad_3"
                                    android:layout_height="@dimen/pad_3"
                                    android:background="@drawable/dot_view_bg"/>

                            <View
                                    android:layout_width="@dimen/pad_3"
                                    android:layout_height="@dimen/pad_3"
                                    android:background="@drawable/dot_view_bg"
                                    android:layout_marginTop="@dimen/pad_3"
                                    android:layout_marginBottom="@dimen/pad_3"/>

                            <View
                                    android:layout_width="@dimen/pad_3"
                                    android:layout_height="@dimen/pad_3"
                                    android:background="@drawable/dot_view_bg"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <FrameLayout
                    android:id="@+id/fragment_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <RelativeLayout
                    android:id="@+id/supplierEnableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/backgroundColor"
                    android:visibility="gone">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:paddingLeft="@dimen/pad_30"
                        android:paddingRight="@dimen/pad_30">
                    <ImageView
                            android:layout_width="@dimen/pad_160"
                            android:layout_height="@dimen/pad_160"
                            android:src="@drawable/seller1"
                            android:contentDescription="@string/app_name"
                            android:adjustViewBounds="true"/>

                    <in.inferon.msl.lemonor.view.ui.BoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/seller_content_1"
                            android:textSize="@dimen/text_16sp"
                            android:textColor="@color/fontColor"/>

                    <in.inferon.msl.lemonor.view.ui.LightTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/seller_content_2"
                            android:textSize="@dimen/text_16sp"
                            android:textColor="@color/fontColor"/>

                    <in.inferon.msl.lemonor.view.ui.LightTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/seller_content_3"
                            android:textSize="@dimen/text_16sp"
                            android:textColor="@color/fontColor"/>

                    <ImageView
                            android:layout_width="@dimen/pad_50"
                            android:layout_height="wrap_content"
                            android:src="@drawable/togle"
                            android:contentDescription="@string/app_name"
                            android:adjustViewBounds="true"
                            android:layout_marginTop="@dimen/pad_10"/>

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/pad_10">
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                            <in.inferon.msl.lemonor.view.ui.BoldTextView
                                    android:layout_width="@dimen/pad_30"
                                    android:layout_height="@dimen/pad_30"
                                    android:text="@string/_1"
                                    android:textSize="@dimen/text_16sp"
                                    android:textColor="@color/fontColor"
                                    android:background="@drawable/added_iv_bg"
                                    android:gravity="center"/>
                            <in.inferon.msl.lemonor.view.ui.BoldTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/enable_as_a_seller"
                                    android:textSize="@dimen/text_16sp"
                                    android:textColor="@color/fontColor"
                                    android:layout_marginLeft="@dimen/pad_10"
                                    android:layout_marginStart="@dimen/pad_10"/>
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/pad_10">
                            <in.inferon.msl.lemonor.view.ui.BoldTextView
                                    android:layout_width="@dimen/pad_30"
                                    android:layout_height="@dimen/pad_30"
                                    android:text="@string/_2"
                                    android:textSize="@dimen/text_16sp"
                                    android:textColor="@color/fontColor"
                                    android:background="@drawable/added_iv_bg"
                                    android:gravity="center"/>
                            <in.inferon.msl.lemonor.view.ui.BoldTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/enter_shop_details"
                                    android:textSize="@dimen/text_16sp"
                                    android:textColor="@color/fontColor"
                                    android:layout_marginLeft="@dimen/pad_10"
                                    android:layout_marginStart="@dimen/pad_10"/>
                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/pad_10">
                            <in.inferon.msl.lemonor.view.ui.BoldTextView
                                    android:layout_width="@dimen/pad_30"
                                    android:layout_height="@dimen/pad_30"
                                    android:text="@string/_3"
                                    android:textSize="@dimen/text_16sp"
                                    android:textColor="@color/fontColor"
                                    android:background="@drawable/added_iv_bg"
                                    android:gravity="center"/>
                            <in.inferon.msl.lemonor.view.ui.BoldTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/list_products_and_update_price"
                                    android:textSize="@dimen/text_16sp"
                                    android:textColor="@color/fontColor"
                                    android:layout_marginLeft="@dimen/pad_10"
                                    android:layout_marginStart="@dimen/pad_10"/>
                        </LinearLayout>
                    </LinearLayout>

                    <in.inferon.msl.lemonor.view.ui.LightTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/viola_you_are_done_and_wait_for_the_orders"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/fontColor"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/pad_20"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                    android:id="@+id/progressLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingLeft="@dimen/pad_20"
                    android:paddingRight="@dimen/pad_20"
                    android:paddingTop="@dimen/pad_10"
                    android:paddingBottom="@dimen/pad_10"
                    android:background="@drawable/progress_layout_bg"
                    android:layout_centerInParent="true"
                    android:visibility="gone">
                <in.inferon.msl.lemonor.view.ui.LightTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textSize="@dimen/text_12sp"
                        android:textColor="@color/colorPrimary"/>

                <ProgressBar
                        android:layout_width="@dimen/pad_15"
                        android:layout_height="@dimen/pad_15"
                        android:indeterminateTint="@color/colorPrimary"
                        android:indeterminateTintMode="src_in"
                        android:layout_marginLeft="@dimen/pad_10"
                        android:layout_marginStart="@dimen/pad_10"/>
            </LinearLayout>
        </RelativeLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                app:itemIconTint="@color/bottom_nav_color"
                app:itemTextColor="@color/bottom_nav_color"
                app:itemTextAppearanceActive="@dimen/text_16sp"
                app:itemTextAppearanceInactive="@dimen/text_12sp"
                app:menu="@menu/bottom_nav_view"/>

    </LinearLayout>
</RelativeLayout>