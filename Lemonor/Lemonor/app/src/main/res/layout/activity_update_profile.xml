<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/backgroundColor"
        android:scrollbars="none"
        tools:context=".view.activity.LoginActivity">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/pad_50"
                    android:orientation="vertical">
                <ImageView
                        android:layout_width="@dimen/pad_60"
                        android:layout_height="@dimen/pad_60"
                        android:src="@drawable/logoplain"
                        android:contentDescription="@string/app_name"
                        android:adjustViewBounds="true"
                        android:layout_gravity="center"/>

                <in.inferon.msl.lemonor.view.ui.BoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lemonor"
                        android:textSize="@dimen/text_42sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"/>

                <in.inferon.msl.lemonor.view.ui.LightTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/safe_home_delivery"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/white"
                        android:layout_gravity="end"
                        android:layout_marginRight="@dimen/pad_5"
                        android:layout_marginEnd="@dimen/pad_5"/>
            </LinearLayout>

            <in.inferon.msl.lemonor.view.ui.BoldTextView
                    android:id="@+id/emailTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_16sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/pad_20"/>

            <LinearLayout
                    android:id="@+id/registerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/register_layout_bg"
                    android:animateLayoutChanges="true"
                    android:layout_marginTop="@dimen/pad_30">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/pad_20"
                        android:paddingBottom="@dimen/pad_50"
                        android:paddingLeft="@dimen/pad_10"
                        android:paddingRight="@dimen/pad_10">

                    <in.inferon.msl.lemonor.view.ui.LightTextView
                            android:id="@+id/userNameET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/fontColor"
                            android:hint="@string/user_name"
                            android:textColorHint="@color/light_gray"
                            android:background="@drawable/main_edit_tx_bg"
                            android:padding="@dimen/pad_10"
                            android:inputType="text"
                            android:layout_marginTop="@dimen/pad_10"
                            android:imeOptions="actionNext"
                            android:layout_marginLeft="@dimen/pad_10"
                            android:layout_marginRight="@dimen/pad_10"/>

                    <in.inferon.msl.lemonor.view.ui.LightTextView
                            android:id="@+id/userNameTakenTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/username_taken"
                            android:textSize="@dimen/text_12sp"
                            android:textColor="@color/white"
                            android:background="@drawable/username_taken_tv_bg"
                            android:padding="@dimen/pad_5"
                            android:layout_marginLeft="@dimen/pad_20"
                            android:layout_marginRight="@dimen/pad_20"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/pad_20"
                            android:visibility="gone"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/pad_10"
                            android:layout_marginLeft="@dimen/pad_10"
                            android:layout_marginRight="@dimen/pad_10">
                        <in.inferon.msl.lemonor.view.ui.LightEditText
                                android:id="@+id/firstNameET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_14sp"
                                android:textColor="@color/fontColor"
                                android:hint="@string/first_name"
                                android:textColorHint="@color/light_gray"
                                android:background="@drawable/main_edit_tx_bg"
                                android:padding="@dimen/pad_10"
                                android:inputType="text"
                                android:imeOptions="actionNext"
                                android:layout_weight="1"
                                android:layout_marginRight="@dimen/pad_5"
                                android:layout_marginEnd="@dimen/pad_5"/>

                        <in.inferon.msl.lemonor.view.ui.LightEditText
                                android:id="@+id/lastNameET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_14sp"
                                android:textColor="@color/fontColor"
                                android:hint="@string/last_name"
                                android:textColorHint="@color/light_gray"
                                android:background="@drawable/main_edit_tx_bg"
                                android:padding="@dimen/pad_10"
                                android:inputType="text"
                                android:imeOptions="actionNext"
                                android:layout_weight="1"
                                android:layout_marginLeft="@dimen/pad_5"
                                android:layout_marginStart="@dimen/pad_5"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/pad_10"
                            android:layout_marginLeft="@dimen/pad_10"
                            android:layout_marginRight="@dimen/pad_10">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:background="@drawable/main_edit_tx_bg"
                                android:layout_marginRight="@dimen/pad_5"
                                android:layout_marginEnd="@dimen/pad_5"
                                android:paddingLeft="@dimen/pad_15"
                                android:paddingRight="@dimen/pad_15"
                                android:layout_weight="1">
                            <ImageView
                                    android:layout_width="@dimen/pad_15"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_call_black_18dp"
                                    android:contentDescription="@string/app_name"
                                    android:adjustViewBounds="true"/>

                            <in.inferon.msl.lemonor.view.ui.LightTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/_91"
                                    android:textSize="@dimen/text_14sp"
                                    android:textColor="@color/fontColor"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="@dimen/pad_3"
                                    android:paddingRight="@dimen/pad_5"/>

                            <in.inferon.msl.lemonor.view.ui.LightEditText
                                    android:id="@+id/mobileNoET"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/text_14sp"
                                    android:textColor="@color/fontColor"
                                    android:hint="@string/mobile_no"
                                    android:inputType="number"
                                    android:maxLength="10"
                                    android:imeOptions="actionNext"
                                    android:textColorHint="@color/light_gray"
                                    android:background="@drawable/plain_edit_tx_bg"
                                    android:paddingTop="@dimen/pad_15"
                                    android:paddingBottom="@dimen/pad_15"/>
                        </LinearLayout>


                        <in.inferon.msl.lemonor.view.ui.LightTextView
                                android:id="@+id/countryTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_14sp"
                                android:textColor="@color/fontColor"
                                android:background="@drawable/main_edit_tx_bg"
                                android:padding="@dimen/pad_15"
                                android:layout_marginLeft="@dimen/pad_5"
                                android:layout_marginStart="@dimen/pad_5"
                                android:layout_weight="1"/>

                        <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/countrySpinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_14sp"
                                android:textColor="@color/black"
                                android:background="@drawable/main_edit_tx_bg"
                                android:layout_marginLeft="@dimen/pad_5"
                                android:layout_marginStart="@dimen/pad_5"
                                android:layout_weight="1"
                                android:padding="@dimen/pad_8"
                                android:visibility="gone"/>
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/stateLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/pad_10"
                            android:layout_marginLeft="@dimen/pad_10"
                            android:layout_marginRight="@dimen/pad_10">
                        <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/stateSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_14sp"
                                android:textColor="@color/fontColor"
                                android:background="@drawable/main_edit_tx_bg"
                                android:layout_marginRight="@dimen/pad_5"
                                android:layout_marginEnd="@dimen/pad_5"
                                android:layout_weight="1"
                                android:padding="@dimen/pad_8"/>

                        <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/districtSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_14sp"
                                android:textColor="@color/fontColor"
                                android:background="@drawable/main_edit_tx_bg"
                                android:layout_marginLeft="@dimen/pad_5"
                                android:layout_marginStart="@dimen/pad_5"
                                android:layout_weight="1"
                                android:padding="@dimen/pad_8"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/pad_10"
                            android:layout_marginLeft="@dimen/pad_10"
                            android:layout_marginRight="@dimen/pad_10">
                        <in.inferon.msl.lemonor.view.ui.LightEditText
                                android:id="@+id/cityET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_14sp"
                                android:textColor="@color/fontColor"
                                android:hint="@string/city"
                                android:textColorHint="@color/light_gray"
                                android:background="@drawable/main_edit_tx_bg"
                                android:padding="@dimen/pad_10"
                                android:inputType="text"
                                android:imeOptions="actionNext"
                                android:layout_weight="1"
                                android:layout_marginRight="@dimen/pad_5"
                                android:layout_marginEnd="@dimen/pad_5"/>

                        <in.inferon.msl.lemonor.view.ui.LightEditText
                                android:id="@+id/pincodeET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_14sp"
                                android:textColor="@color/fontColor"
                                android:hint="@string/pincode"
                                android:textColorHint="@color/light_gray"
                                android:background="@drawable/main_edit_tx_bg"
                                android:padding="@dimen/pad_10"
                                android:inputType="number"
                                android:maxLength="6"
                                android:imeOptions="actionDone"
                                android:layout_weight="1"
                                android:layout_marginLeft="@dimen/pad_5"
                                android:layout_marginStart="@dimen/pad_5"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/pad_20"
                            android:layout_marginLeft="@dimen/pad_10"
                            android:layout_marginRight="@dimen/pad_10"
                            android:orientation="horizontal">
                        <ImageView
                                android:id="@+id/maleIV"
                                android:layout_width="@dimen/pad_60"
                                android:layout_height="@dimen/pad_50"
                                android:src="@drawable/malon"
                                android:contentDescription="@string/app_name"
                                android:adjustViewBounds="true"/>
                        <com.shawnlin.numberpicker.NumberPicker
                                android:id="@+id/number_picker"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:np_width="@dimen/pad_180"
                                app:np_height="@dimen/pad_50"
                                app:np_dividerColor="@color/colorPrimary"
                                app:np_max="120"
                                app:np_min="0"
                                app:np_selectedTextColor="@color/fontColor"
                                app:np_selectedTextSize="@dimen/text_16sp"
                                app:np_textColor="@color/fontColor"
                                app:np_textSize="@dimen/text_14sp"
                                app:np_value="45"
                                app:np_orientation="horizontal"
                                android:layout_weight="1"/>
                        <ImageView
                                android:id="@+id/femaleIV"
                                android:layout_width="@dimen/pad_60"
                                android:layout_height="@dimen/pad_50"
                                android:src="@drawable/fimof"
                                android:contentDescription="@string/app_name"
                                android:adjustViewBounds="true"/>
                    </LinearLayout>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/pad_1"
                            android:background="@color/light_gray"
                            android:layout_marginLeft="@dimen/pad_80"
                            android:layout_marginRight="@dimen/pad_80"
                            android:layout_marginTop="@dimen/pad_30"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/pad_30">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/pad_10"
                                android:gravity="end|center_vertical">

                            <in.inferon.msl.lemonor.view.ui.BoldTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/addresses"
                                    android:textSize="@dimen/text_24sp"
                                    android:textColor="@color/black"
                                    android:layout_weight="1"/>

                            <in.inferon.msl.lemonor.view.ui.LightTextView
                                    android:id="@+id/addNewAddressLayout"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/add_new"
                                    android:textSize="@dimen/text_14sp"
                                    android:textColor="@color/white"
                                    android:background="@drawable/button_bg"
                                    android:drawableLeft="@drawable/ic_add_white_18dp"
                                    android:drawableStart="@drawable/ic_add_white_18dp"
                                    android:drawablePadding="@dimen/pad_10"
                                    android:paddingLeft="@dimen/pad_10"
                                    android:paddingRight="@dimen/pad_10"
                                    android:paddingTop="@dimen/pad_5"
                                    android:paddingBottom="@dimen/pad_5"/>
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/addressesRV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <in.inferon.msl.lemonor.view.ui.BoldButton
                            android:id="@+id/doneBT"
                            style="?attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/done"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:paddingLeft="@dimen/pad_40"
                            android:paddingRight="@dimen/pad_40"
                            android:background="@drawable/button_bg"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/pad_40"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/pad_300"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
            android:id="@+id/progressLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="@dimen/pad_20"
            android:paddingRight="@dimen/pad_20"
            android:paddingTop="@dimen/pad_10"
            android:paddingBottom="@dimen/pad_10"
            android:background="@drawable/progress_layout_bg"
            android:layout_centerInParent="true"
            android:visibility="gone">
        <in.inferon.msl.lemonor.view.ui.LightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textSize="@dimen/text_12sp"
                android:textColor="@color/colorPrimary"/>

        <ProgressBar
                android:layout_width="@dimen/pad_15"
                android:layout_height="@dimen/pad_15"
                android:indeterminateTint="@color/colorPrimary"
                android:indeterminateTintMode="src_in"
                android:layout_marginLeft="@dimen/pad_10"
                android:layout_marginStart="@dimen/pad_10"/>
    </LinearLayout>
</RelativeLayout>