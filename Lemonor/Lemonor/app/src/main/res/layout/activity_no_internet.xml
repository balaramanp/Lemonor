<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".view.activity.NoInternetActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
        <ImageView
                android:id="@+id/networkIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_wifi_off_white_48dp"
                android:contentDescription="@string/app_name"
                android:adjustViewBounds="true"
                android:layout_gravity="center"/>
        <in.inferon.msl.lemonor.view.ui.BoldTextView
                android:id="@+id/noInternetTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_internet_connection"
                android:textSize="@dimen/text_18sp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:layout_marginTop="@dimen/pad_20"/>

        <in.inferon.msl.lemonor.view.ui.LightTextView
                android:id="@+id/retryTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/retry"
                android:textSize="@dimen/text_14sp"
                android:textColor="@color/colorPrimary"
                android:drawableLeft="@drawable/ic_replay_cp_18dp"
                android:drawableStart="@drawable/ic_replay_cp_18dp"
                android:drawablePadding="@dimen/pad_10"
                android:padding="@dimen/pad_20"
                android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>