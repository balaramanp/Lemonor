<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backgroundColor"
        tools:context=".view.activity.SupportActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">
        <ImageButton
                android:id="@+id/backIB"
                style="?attr/borderlessButtonStyle"
                android:layout_width="@dimen/pad_50"
                android:layout_height="match_parent"
                android:src="@drawable/ic_keyboard_arrow_left_white_24dp"
                android:contentDescription="@string/app_name"
                android:adjustViewBounds="true"/>

        <in.inferon.msl.lemonor.view.ui.BoldTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/help_desk"
                android:textSize="@dimen/text_18sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"/>
    </LinearLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/pad_10">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <in.inferon.msl.lemonor.view.ui.LightEditText
                            android:id="@+id/firstNameET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/black"
                            android:background="@drawable/main_edit_tx_bg"
                            android:padding="@dimen/pad_10"
                            android:hint="@string/first_name"
                            android:textColorHint="@color/gray"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/pad_5"
                            android:layout_marginEnd="@dimen/pad_5"/>

                    <in.inferon.msl.lemonor.view.ui.LightEditText
                            android:id="@+id/lastNameET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/black"
                            android:background="@drawable/main_edit_tx_bg"
                            android:padding="@dimen/pad_10"
                            android:hint="@string/last_name"
                            android:textColorHint="@color/gray"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/pad_5"
                            android:layout_marginStart="@dimen/pad_5"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/pad_10">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/pad_10"
                            android:paddingRight="@dimen/pad_10"
                            android:layout_marginRight="@dimen/pad_5"
                            android:layout_marginEnd="@dimen/pad_5"
                            android:background="@drawable/main_edit_tx_bg">
                        <ImageView
                                android:layout_width="@dimen/pad_15"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_call_black_18dp"
                                android:contentDescription="@string/app_name"
                                android:adjustViewBounds="true"/>
                        <in.inferon.msl.lemonor.view.ui.LightTextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/_91"
                                android:textSize="@dimen/text_14sp"
                                android:textColor="@color/fontColor"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/pad_5"
                                android:paddingRight="@dimen/pad_10"/>

                        <in.inferon.msl.lemonor.view.ui.LightEditText
                                android:id="@+id/mobileNoET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_14sp"
                                android:textColor="@color/black"
                                android:background="@drawable/plain_edit_tx_bg"
                                android:paddingTop="@dimen/pad_10"
                                android:paddingBottom="@dimen/pad_10"
                                android:hint="@string/mobile_no"
                                android:textColorHint="@color/gray"
                                android:inputType="number"
                                android:maxLength="10"
                                android:imeOptions="actionNext"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/pad_10"
                            android:paddingRight="@dimen/pad_10"
                            android:layout_marginStart="@dimen/pad_5"
                            android:layout_marginLeft="@dimen/pad_5"
                            android:background="@drawable/main_edit_tx_bg">
                        <ImageView
                                android:layout_width="@dimen/pad_15"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_call_black_18dp"
                                android:contentDescription="@string/app_name"
                                android:adjustViewBounds="true"/>
                        <in.inferon.msl.lemonor.view.ui.LightTextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/_91"
                                android:textSize="@dimen/text_14sp"
                                android:textColor="@color/fontColor"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/pad_5"
                                android:paddingRight="@dimen/pad_10"/>
                        <in.inferon.msl.lemonor.view.ui.LightEditText
                                android:id="@+id/alterMobileNoET"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_14sp"
                                android:textColor="@color/black"
                                android:background="@drawable/plain_edit_tx_bg"
                                android:paddingTop="@dimen/pad_10"
                                android:paddingBottom="@dimen/pad_10"
                                android:maxLength="15"
                                android:hint="@string/alternative_mobile_no"
                                android:textColorHint="@color/gray"
                                android:inputType="number"
                                android:imeOptions="actionNext"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/pad_20"
                        android:orientation="horizontal">
                    <ImageView
                            android:id="@+id/maleIV"
                            android:layout_width="@dimen/pad_60"
                            android:layout_height="@dimen/pad_50"
                            android:src="@drawable/malon"
                            android:contentDescription="@string/app_name"
                            android:adjustViewBounds="true"/>
                    <com.shawnlin.numberpicker.NumberPicker
                            android:id="@+id/number_picker"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:np_width="@dimen/pad_180"
                            app:np_height="@dimen/pad_50"
                            app:np_dividerColor="@color/colorPrimary"
                            app:np_max="120"
                            app:np_min="0"
                            app:np_selectedTextColor="@color/fontColor"
                            app:np_selectedTextSize="@dimen/text_16sp"
                            app:np_textColor="@color/fontColor"
                            app:np_textSize="@dimen/text_14sp"
                            app:np_value="45"
                            app:np_orientation="horizontal"
                            android:layout_weight="1"/>
                    <ImageView
                            android:id="@+id/femaleIV"
                            android:layout_width="@dimen/pad_60"
                            android:layout_height="@dimen/pad_50"
                            android:src="@drawable/fimof"
                            android:contentDescription="@string/app_name"
                            android:adjustViewBounds="true"/>
                </LinearLayout>

                <in.inferon.msl.lemonor.view.ui.LightEditText
                        android:id="@+id/addressOneET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/black"
                        android:background="@drawable/main_edit_tx_bg"
                        android:padding="@dimen/pad_10"
                        android:hint="@string/address_1"
                        android:textColorHint="@color/gray"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:layout_marginTop="@dimen/pad_10"/>

                <in.inferon.msl.lemonor.view.ui.LightEditText
                        android:id="@+id/addressTwoET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/black"
                        android:background="@drawable/main_edit_tx_bg"
                        android:padding="@dimen/pad_10"
                        android:hint="@string/address_2"
                        android:textColorHint="@color/gray"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:layout_marginTop="@dimen/pad_10"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/pad_10">
                    <in.inferon.msl.lemonor.view.ui.LightEditText
                            android:id="@+id/landmarkET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/black"
                            android:background="@drawable/main_edit_tx_bg"
                            android:padding="@dimen/pad_10"
                            android:hint="@string/landmark"
                            android:textColorHint="@color/gray"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/pad_5"
                            android:layout_marginEnd="@dimen/pad_5"/>

                    <in.inferon.msl.lemonor.view.ui.LightEditText
                            android:id="@+id/cityET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/black"
                            android:background="@drawable/main_edit_tx_bg"
                            android:padding="@dimen/pad_10"
                            android:hint="@string/city"
                            android:textColorHint="@color/gray"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/pad_5"
                            android:layout_marginStart="@dimen/pad_5"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/pad_10">
                    <in.inferon.msl.lemonor.view.ui.LightAutoCompleteTextView
                            android:id="@+id/countryATV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/black"
                            android:hint="@string/country"
                            android:textColorHint="@color/gray"
                            android:background="@drawable/main_edit_tx_bg"
                            android:padding="@dimen/pad_10"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/pad_5"
                            android:layout_marginEnd="@dimen/pad_5"/>

                    <in.inferon.msl.lemonor.view.ui.LightEditText
                            android:id="@+id/pincodeET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_14sp"
                            android:textColor="@color/black"
                            android:background="@drawable/main_edit_tx_bg"
                            android:padding="@dimen/pad_10"
                            android:hint="@string/pincode"
                            android:textColorHint="@color/gray"
                            android:inputType="number"
                            android:imeOptions="actionNext"
                            android:maxLength="6"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/pad_5"
                            android:layout_marginStart="@dimen/pad_5"/>
                </LinearLayout>


                <in.inferon.msl.lemonor.view.ui.LightEditText
                        android:id="@+id/symptomsET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/black"
                        android:background="@drawable/main_edit_tx_bg"
                        android:padding="@dimen/pad_10"
                        android:hint="@string/suggestion_feedback"
                        android:textColorHint="@color/gray"
                        android:inputType="textMultiLine"
                        android:lines="10"
                        android:imeOptions="actionNext"
                        android:gravity="top"
                        android:layout_marginTop="@dimen/pad_10"/>

                <in.inferon.msl.lemonor.view.ui.LightEditText
                        android:id="@+id/requirementsET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/black"
                        android:background="@drawable/main_edit_tx_bg"
                        android:padding="@dimen/pad_10"
                        android:hint="@string/requirements"
                        android:textColorHint="@color/gray"
                        android:inputType="textMultiLine"
                        android:imeOptions="actionDone"
                        android:layout_marginTop="@dimen/pad_10"/>

                <in.inferon.msl.lemonor.view.ui.LightButton
                        android:id="@+id/submitBT"
                        style="?attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/submit"
                        android:textSize="@dimen/text_14sp"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:background="@drawable/button_bg"
                        android:layout_marginTop="@dimen/pad_30"
                        android:layout_marginBottom="@dimen/pad_100"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/pad_30"
                        android:paddingRight="@dimen/pad_30"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
                android:id="@+id/progressLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingLeft="@dimen/pad_20"
                android:paddingRight="@dimen/pad_20"
                android:paddingTop="@dimen/pad_10"
                android:paddingBottom="@dimen/pad_10"
                android:background="@drawable/progress_layout_bg"
                android:layout_centerInParent="true"
                android:visibility="gone">
            <in.inferon.msl.lemonor.view.ui.LightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loading"
                    android:textSize="@dimen/text_12sp"
                    android:textColor="@color/colorPrimary"/>

            <ProgressBar
                    android:layout_width="@dimen/pad_15"
                    android:layout_height="@dimen/pad_15"
                    android:indeterminateTint="@color/colorPrimary"
                    android:indeterminateTintMode="src_in"
                    android:layout_marginLeft="@dimen/pad_10"
                    android:layout_marginStart="@dimen/pad_10"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>